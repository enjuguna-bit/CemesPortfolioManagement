# Server Configuration
FLASK_ENV=development
FLASK_DEBUG=True
HOST=0.0.0.0
PORT=5000

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# CORS Configuration (Android app origins)
CORS_ORIGINS=http://localhost,capacitor://localhost,https://your-android-app.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/arrears_manager
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_MAX_OVERFLOW=20
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_POOL_RECYCLE=3600

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=100/hour
RATELIMIT_PER_ENDPOINT=200/hour

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
UPLOAD_FOLDER=/tmp/uploads
ALLOWED_EXTENSIONS=csv,xlsx,xls
CHUNK_SIZE=1048576  # 1MB chunks

# Mobile Optimization
ENABLE_COMPRESSION=True
COMPRESSION_LEVEL=6
MIN_COMPRESSION_SIZE=500  # bytes
ENABLE_BROTLI=True

# Timeouts (in seconds)
REQUEST_TIMEOUT=15
CONNECTION_TIMEOUT=30
KEEPALIVE_TIMEOUT=60

# Firebase Cloud Messaging (FCM)
FCM_CREDENTIALS_PATH=./firebase-credentials.json
FCM_PROJECT_ID=your-firebase-project-id

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# API Configuration
API_VERSION=v1
API_TITLE=Arrears Manager API
API_DESCRIPTION=Mobile-optimized API for loan analysis and arrears management

# Security Headers
ENABLE_HSTS=True
HSTS_MAX_AGE=31536000  # 1 year
ENABLE_CSP=True
ENABLE_XSS_PROTECTION=True

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3
